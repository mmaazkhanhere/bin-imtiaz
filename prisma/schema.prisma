generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id
  name String
  emailAddress String @unique
  createdAt DateTime @default(now())
}

model Inventory{
  id String @id @default(uuid())
  productName String
  category String
  totalStock Int
  stockAvailable Int
  size Int
  price Float
  color String
  sales Sales[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sales {
  id String @id @default(uuid())
  productName  String
  category     String
  size Int
  quantity     Int
  price        Float
  profit       Float
  seller       String
  color        String
  date         DateTime @default(now())
  inventory    Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId  String
}

model MonthlyMetrics {
  id           Int      @id @default(autoincrement())
  month        String
  totalRevenue Float
  totalSales   Int
  totalProfit Float
  createdAt    DateTime @default(now())

  @@unique([month])
}